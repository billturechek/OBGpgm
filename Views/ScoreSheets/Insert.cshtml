@model OBGpgm.Models.ScoreSheet

@{
    ViewData["Title"] = "Insert Score Sheet";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var returnPage = Convert.ToInt32(ViewBag.returnPage);
}

<div class="container">
    <h1>Insert Score Sheet</h1>

    <h4>ScoreSheet</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Insert">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="SsSessionId" class="control-label"></label>
                    <select asp-for="SsSessionId" class="form-control" asp-items="ViewBag.SessionId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="SsDivision" class="control-label"></label>
                    <input asp-for="SsDivision" class="form-control" />
                    <span asp-validation-for="SsDivision" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SsWeek" class="control-label"></label>
                    <input asp-for="SsWeek" class="form-control" />
                    <span asp-validation-for="SsWeek" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SsHteam" class="control-label"></label>
                    <input asp-for="SsHteam" class="form-control" />
                    <span asp-validation-for="SsHteam" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SsVteam" class="control-label"></label>
                    <input asp-for="SsVteam" class="form-control" />
                    <span asp-validation-for="SsVteam" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SsHpoints" class="control-label"></label>
                    <input asp-for="SsHpoints" class="form-control" />
                    <span asp-validation-for="SsHpoints" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SsVpoints" class="control-label"></label>
                    <input asp-for="SsVpoints" class="form-control" />
                    <span asp-validation-for="SsVpoints" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SsDate" class="control-label"></label>
                    <input asp-for="SsDate" class="form-control" />
                    <span asp-validation-for="SsDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Insert" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" asp-route-pg="@returnPage">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</div>