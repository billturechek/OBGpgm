@model IEnumerable<OBGpgm.Models.Ptlog>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Pager pager = new Pager();
    int pageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ptltype)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PtlDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ptlmember)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ptlteam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PtlplayerNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PtlsessionNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ptltype)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PtlDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ptlmember)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ptlteam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PtlplayerNavigation.Member.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PtlsessionNavigation.SessionId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Ptlid" asp-route-pg="@pager.CurrentPage">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Ptlid" asp-route-pg="@pager.CurrentPage">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Ptlid" asp-route-pg="@pager.CurrentPage">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<partial name="_pager" model="@pager" />
