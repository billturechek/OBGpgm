@model IEnumerable<OBGpgm.Models.Player>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

    Pager pager = new Pager();
    int pageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StartWeek)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndWeek)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsPlaying)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsCaptain)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DraftRound)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsInDraft)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsBeingTraded)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Draft)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Member)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Session)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Team)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StartWeek)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndWeek)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsPlaying)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsCaptain)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DraftRound)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsInDraft)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsBeingTraded)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Draft.DraftId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Member.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Session.SessionId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Team.TeamNumber)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PlayerId" asp-route-pg="@pager.CurrentPage">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PlayerId" asp-route-pg="@pager.CurrentPage">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PlayerId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<partial name="_pager" model="@pager" />
