@model OBGpgm.Models.Schedule

@{
    ViewData["Title"] = "Create Payout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>Create Schedule Entry</h1>
    <h3 class="message text-success">@TempData["Message"]</h3>
    <h4>Schedule Entry for a match</h4>
    <hr />
    <form asp-action="Insert">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>
        <div class="form-row">
            <div class="form-group col-md-2">
                <label asp-for="Teams" class="control-label"></label>
                <input asp-for="Teams" class="form-control" />
                <span asp-validation-for="Teams" class="text-danger"></span>
            </div>
            <div class="form-group col-md-2">
                <label asp-for="Week" class="control-label"></label>
                <input asp-for="Week" class="form-control" />
                <span asp-validation-for="Week" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-2">
                <label asp-for="TimeSlot" class="control-label"></label>
                <input asp-for="TimeSlot" class="form-control" />
                <span asp-validation-for="TimeSlot" class="text-danger"></span>
            </div>
            <div class="form-group col-md-2">
                <label asp-for="TableGroup" class="control-label"></label>
                <input asp-for="TableGroup" class="form-control" />
                <span asp-validation-for="TableGroup" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-2">
                <label asp-for="HomeTeam" class="control-label"></label>
                <input asp-for="HomeTeam" class="form-control" />
                <span asp-validation-for="HomeTeam" class="text-danger"></span>
            </div>
            <div class="form-group col-md-2">
                <label asp-for="VisitingTeam" class="control-label"></label>
                <input asp-for="VisitingTeam" class="form-control" />
                <span asp-validation-for="VisitingTeam" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-2">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>

<div>
    <a asp-action="List">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
