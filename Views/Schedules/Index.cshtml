@model IEnumerable<OBGpgm.Models.Schedule>
@{
    ScheduleViewModel vm = new ScheduleViewModel();
    vm.DataList = (List<Schedule>)Model;
    ViewBag.dataList = vm.DataList;
}

<h1>Customize a season's schedule</h1>
<p>
    <a class="btn btn-primary" asp-action="Select">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SessionId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teams)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SessionId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Teams)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Customize" asp-route-id="@item.SessionId.ToString()">Edit</a> |
                <a class="btn btn-secondary" asp-action="View" asp-route-id="@item.SessionId.ToString()">View</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
