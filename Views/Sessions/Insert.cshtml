@model OBGpgm.Models.CreateSessionViewModel

@{
    ViewData["Title"] = "Insert Session";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    $('#sDate).datepicker();
</script>

<div class="container">
    <h1>Create New Session</h1>
    <h3 class="message alert-success">@ViewBag.Message</h3>
    <h4>Current Session</h4>
    <hr />
    <div class="row">
        <div class="form-group col-md-3">
            <label asp-for="csession.SessionId" class="control-label">Current Session</label>
            <input asp-for="csession.SessionId" class="form-control" disabled="disabled" />
            <span asp-validation-for="csession.SessionId" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="aCount" class="control-label">Available Players</label>
            <input asp-for="aCount" class="form-control" disabled="disabled" />
        </div>
        <div class="form-group col-md-3">
            <label asp-for="teamCount" class="control-label">Teams Required</label>
            <input asp-for="teamCount" class="form-control" disabled="disabled" />
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-3">
            <label asp-for="csession.Year" class="control-label">Current Year</label>
            <input asp-for="csession.Year" class="form-control" disabled="disabled" />
        </div>
        <div class="form-group col-md-3">
            <label asp-for="csession.Season" class="control-label">Current Season</label>
            <select asp-for="csession.Season" asp-items="Html.GetEnumSelectList<snType>()"
                    class="form-control" disabled="disabled">
                <option selected="selected" value="">Please select</option>
            </select>
        </div>
    </div>
    <hr />
    <h3>New Session Below</h3>
    <div class="container">
        <div class="col-md-12">
            <form asp-action="Insert">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="form-group col-md-4">
                        <label asp-for="Session.Year" class="control-label"></label>
                        <select asp-for="Session.Year" data-val="true" class="form-control">
                            <option value="">Pick one</option>
                            <option value="2022">2022</option>
                            <option value="2023">2023</option>
                            <option value="2024">2024</option>
                            <option value="2025">2025</option>
                            <option value="2026">2026</option>
                            <option value="2027">2027</option>
                            <option value="2028">2028</option>
                            <option value="2029">2029</option>
                            <option value="2030">2030</option>
                            <option value="2031">2031</option>
                            <option value="2032">2032</option>
                        </select>
                        <span asp-validation-for="Session.Year" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="Session.Season" class="control-label"></label>
                        <select asp-for="Session.Season" asp-items="Html.GetEnumSelectList<snType>()"
                                class="form-control">
                            <option selected="selected" value="">Please select</option>
                        </select>
                        <span asp-validation-for="Session.Season" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-4">
                        <label asp-for="Session.TeamsD1" class="control-label"></label>
                        <select asp-for="Session.TeamsD1" data-val="true" class="form-control">
                            <option value="">Pick one</option>
                            <option value="24">24</option>
                            <option value="22">22</option>
                            <option value="20">20</option>
                            <option value="18">18</option>
                            <option value="16">16</option>
                            <option value="14">14</option>
                        </select>
                        <span asp-validation-for="Session.TeamsD1" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="Session.TeamsD2" class="control-label"></label>
                        <select asp-for="Session.TeamsD2" data-val="true" class="form-control">
                            <option value="">Pick one</option>
                            <option value="0">0</option>
                        </select>
                        <span asp-validation-for="Session.TeamsD2" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-4">
                        <label asp-for="Session.StartDate" class="control-label"></label>
                        <input asp-for="Session.StartDate" class="form-control" />
                        <span asp-validation-for="Session.StartDate" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="Session.CurrentWeek" class="control-label"></label>
                        <input asp-for="Session.CurrentWeek" class="form-control" />
                        <span asp-validation-for="Session.CurrentWeek" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group form-check col-md-4">
                        <br />
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Session.CurrentSeason" disabled="disabled" /> @Html.DisplayNameFor(model => model.Session.CurrentSeason)
                        </label>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="Session.DraftType" class="control-label"></label>
                        <select asp-for="Session.DraftType" asp-items="Html.GetEnumSelectList<DraftTypes>()"
                                class="form-control">
                            <option selected="selected" value="">Please select</option>
                        </select>
                        <span asp-validation-for="Session.DraftType" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-4">
                        <label asp-for="Session.President" class="control-label"></label>
                        <select asp-for="Session.President" class="form-control" asp-items="ViewBag.LivingMembers">
                            <option value="">Please select</option>
                        </select>
                        <span asp-validation-for="Session.President" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="Session.VicePresident" class="control-label"></label>
                        <select asp-for="Session.VicePresident" class="form-control" asp-items="ViewBag.LivingMembers">
                            <option value="">Please select</option>
                        </select>
                        <span asp-validation-for="Session.VicePresident" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-4">
                        <label asp-for="Session.Secretary" class="control-label"></label>
                        <select asp-for="Session.Secretary" class="form-control" asp-items="ViewBag.LivingMembers">
                            <option value="">Please select</option>
                        </select>
                        <span asp-validation-for="Session.Secretary" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="Session.Treasurer" class="control-label"></label>
                        <select asp-for="Session.Treasurer" class="form-control" asp-items="ViewBag.LivingMembers">
                            <option value="">Please select</option>
                        </select>
                        <span asp-validation-for="Session.Treasurer" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-4">
                        <label asp-for="Session.SecondVp1" class="control-label"></label>
                        <select asp-for="Session.SecondVp1" class="form-control" asp-items="ViewBag.LivingMembers">
                            <option value="">Please select</option>
                        </select>
                        <span asp-validation-for="Session.SecondVp1" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="Session.SecondVp2" class="control-label"></label>
                        <select asp-for="Session.SecondVp2" class="form-control" asp-items="ViewBag.LivingMembers">
                            <option value="">Please select</option>
                        </select>
                        <span asp-validation-for="Session.SecondVp2" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-4">
                        <label asp-for="Session.SecondVp3" class="control-label"></label>
                        <select asp-for="Session.SecondVp3" class="form-control" asp-items="ViewBag.LivingMembers">
                            <option value="">Please select</option>
                        </select>
                        <span asp-validation-for="Session.SecondVp3" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="Session.SecondVp4" class="control-label"></label>
                        <select asp-for="Session.SecondVp4" class="form-control" asp-items="ViewBag.LivingMembers">
                            <option value="">Please select</option>
                        </select>
                        <span asp-validation-for="Session.SecondVp4" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                </div>
                <div class="row">
                    <div class="form-group">
                        <input type="submit" value="Insert" class="btn btn-primary" />
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="List">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</div>