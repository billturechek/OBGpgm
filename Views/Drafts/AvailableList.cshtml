@{
}
<div class="container">
    <h1>Create Available Player List (for draft)</h1>
    <h3 class="message text-success">@TempData["Message"]</h3>
    
    <form name="form1" asp-action="Enter">
        <div class="row">
            <h3 class="message text-info mb-3">Press button to build list of currently available players.</h3>
        </div>
        <div class="row">
            <div class="form-group col-md-3">
            </div>
            <div class="form-group col-md-2">
                <button class="btn btn-outline-info"
                        name="make"
                        type="submit"
                        asp-controller="Drafts"
                        asp-action="MakeAvailable">
                        Make Sheet
                </button>
            </div>
        </div>
    </form>
</div>