@model OBGpgm.Models.Photo

@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>Details</h1>
    <h4>Image</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.caption)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.caption)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.largeImage)
        </dt>
        <dd class="col-sm-10">
            <img class="img-responsive full-width"
                 style="border:30px; border-color:brown; border-style:inset;"
                 src="data:image/jpeg;base64,@Convert.ToBase64String(Model.largeImage)" />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.thumbImage)
        </dt>
        <dd class = "col-sm-10">
            <img class="img-responsive full-width" src="data:image/jpeg;base64,@Convert.ToBase64String(Model.thumbImage)" />
        </dd>
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.articleId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.articleId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.notes)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.notes)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Super Admin"))
    {
        <a asp-action="Update" asp-route-id="@Model.id">Update | </a>
    }
    <a asp-action="List">Back to List</a>
</div>
